<h2>Welcome to Pizza Shop</h2>
<div class="row">
    <% @product.each do |p| %>
        <div class="col-md-3">
          <div>
            <%= p.title %>
          </div>

          <div>
            <img src="<%= p.path_to_image %>"/>
          </div>

          <div>
            <%= p.description %>
          </div>
          <div>
            Size: <%= p.size %> cm
          </div>

          <div>
            Price: <%= p.price %> rub
          </div>
          <button type="button" class="btn btn-success" onclick="add_to_cart(<%= p.id %>)">add to cart</button>
        </div>
    <% end %>
</div>
</br>
